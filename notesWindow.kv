# Filename: ms_stocky_notes_rework.py

<notesWindow>
    BoxLayout:
        orientation: "vertical"
        cols: 1
        size: root.width, root.height
        pos: root.pos

        TextInput:
            size: (root.width,root.height)
            multiline: True
            do_wrap: True
            # hint_text_color: [1,1,1,1]
            foreground_color: [1,1,1,1] 
            background_color: [0,0,0,1]

    BoxLayout:
        orientation: "horizontal"
        cols: 3
        size: root.width, root.height/8

        Button:
            markup: True
            text: '[b]B[/b]'
            background_color: [1,1,1,1]

        Button:
            markup: True
            text: '[u]U[/u]'
            background_color: [1,1,1,1]
        
        Button:
            markup: True
            text: '[i]I[/i]'
            background_color: [1,1,1,1]

        Button:
            markup: True
            text: '[s]abc[/s]'